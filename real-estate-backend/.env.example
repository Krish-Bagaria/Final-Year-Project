# ==============================================
# SERVER CONFIGURATION
# ==============================================
NODE_ENV=development
PORT=5000

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# Local MongoDB
MONGODB_URI=mongodb://localhost:27017/real-estate-jaipur

# OR MongoDB Atlas (Cloud) - Replace with your connection string
# MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/real-estate-jaipur?retryWrites=true&w=majority

# ==============================================
# JWT CONFIGURATION
# ==============================================
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# ==============================================
# CLOUDINARY CONFIGURATION (for image uploads)
# ==============================================
# Sign up at https://cloudinary.com to get these credentials
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ==============================================
# EMAIL CONFIGURATION (Nodemailer)
# ==============================================
# For Gmail - Enable "Less secure app access" or use App Password
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_password_or_app_password
EMAIL_FROM=JaipurEstate <noreply@jaipurestate.com>

# ==============================================
# APPLICATION SETTINGS
# ==============================================
FRONTEND_URL=http://localhost:3000
MAX_FILE_SIZE=5242880
# Max file size in bytes (5MB = 5242880 bytes)

# ==============================================
# RATE LIMITING
# ==============================================
RATE_LIMIT_WINDOW=15
# Time window in minutes
RATE_LIMIT_MAX_REQUESTS=100
# Maximum requests per window

# ==============================================
# CONTACT INFORMATION
# ==============================================
COMPANY_NAME=JaipurEstate
COMPANY_EMAIL=info@jaipurestate.com
COMPANY_PHONE=‪+919876543210‬
COMPANY_ADDRESS=C-Scheme, Jaipur, Rajasthan, India
